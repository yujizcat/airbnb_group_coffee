
<%= simple_form_for([@property, @booking]) do |b| %>
<%= b.error_notification %>
<%= b.error_notification message: b.object.errors[:base].to_sentence if b.object.errors[:base].present? %>

<div class="form-inputs">
  <%= b.input :name %>
  <%= b.input :content %>

</div>

<div class="form-actions">
  <%= b.button :submit %>
</div>
<% end %>
