<div class="banner">
  <div class="login-page">
    <p>Welcome <%= current_user.email%>
    </p>
    <%= link_to "Sign out!" , destroy_user_session_path, :method=> :delete %>

  </div>

  <div class="properties">
    <div class="p-card-title">
      <p>Properties</p>
      <p>Address</p>
      <p>Description</p>
      <p>Photos</p>
    </div>
    <% @properties.each do |p| %>
      <div class="p-card">
        <h2>
          <%= p.name %>
        </h2>
        <h3>
          <%= p.city %>
        </h3>

          <p>Type: <%= p.description.split(',')[0] %></p>
          <p>Suit for: <%= p.description.split(',')[1] %></p>
          <p>Price: $<%= p.description.split(',')[2] %> per day</p>
          <p>Monthly Rental: $<%= p.description.split(',')[2].to_i*p.description.split(',')[3].to_i/100*30 %> per month</p>
          <p>Discount: <%= 100-p.description.split(',')[3].to_i %>% off!</p>

        <p>
          <%= image_tag "#{p.pic}", class:"card-img"%>
        </p>
      </div>
      <% end %>


  </div>

</div>
